<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:Demo.UserControls"
        Title="MainWindow" Height="1000" Width="1024" MinWidth="1024" Background="GhostWhite">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <uc:NavListControl  Grid.Row="0" />
        <uc:NavAttributesControl Grid.Row="1" />
        <uc:SortUserControl Grid.Row="2" Margin="35,20,0,0" />
        <uc:CenterListUserControl Grid.Row="3" Margin="35,5"/>
        <uc:PageControl Grid.Row="4"/>
    </Grid>
</Window>
